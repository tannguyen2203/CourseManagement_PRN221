@page
@model CourseManagement.Pages.SubjectPage.CreateModel

<h4>Subject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subject.SubjectName" class="control-label"></label>
                <input asp-for="Subject.SubjectName" class="form-control" />
                <span asp-validation-for="Subject.SubjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.SubjectCode" class="control-label"></label>
                <input asp-for="Subject.SubjectCode" class="form-control" />
                <span asp-validation-for="Subject.SubjectCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.CreateDate" class="control-label"></label>
                <input asp-for="Subject.CreateDate" class="form-control" />
                <span asp-validation-for="Subject.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.MajorId" class="control-label"></label>
                <select asp-for="Subject.MajorId" class ="form-control" asp-items="ViewBag.MajorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="SubjectMainPage">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
