@page
@model CourseManagement.Pages.SubjectPage.IndexModel

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    .create-link {
        display: inline-block;
        background-color: #4CAF50;
        color: white;
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        border-radius: 4px;
    }

    .edit-link, .details-link, .delete-link {
        display: inline-block;
        margin-right: 5px;
        color: #333;
        text-decoration: none;
    }

    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 200px;
        height: 100vh;
        background-color: #f8f9fa;
        padding: 20px;
    }

    .navbar-nav {
        list-style-type: none;
        padding: 0;
    }

    .nav-item {
        margin-bottom: 10px;
    }

</style>

<p>
    <a asp-page="Create" class="create-link">Create New</a>
</p>

<body>

    <div>

        <nav class="navbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="../Coursepage/CourseMainPage">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Semester</a>
                </li>
            </ul>
        </nav>
    </div>

    <div>

        <table class="table">
            <thead>
                <tr>
                    <th>Subject Name</th>
                    <th>Subject Code</th>
                    <th>Create Date</th>
                    <th>Major ID</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Subject)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.SubjectName)</td>
                        <td>@Html.DisplayFor(modelItem => item.SubjectCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Major.Id)</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="edit-link">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="details-link">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="delete-link">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
