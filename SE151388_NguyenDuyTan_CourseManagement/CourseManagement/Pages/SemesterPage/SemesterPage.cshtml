@page
@model CourseManagement.Pages.SemesterPage.IndexModel

<!DOCTYPE html>
<html>
<head>
    <title>Semester Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            padding: 20px;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .header {
            background-color: #007bff;
            padding: 10px;
            color: white;
            text-align: center;
            margin-bottom: 20px;
        }

        .table {
            background-color: white;
        }

            .table th {
                font-weight: bold;
            }

            .table td {
                vertical-align: middle;
            }

        .table-actions {
            text-align: center;
        }

        .btn {
            margin-right: 5px;
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            height: 100vh;
            background-color: #f8f9fa;
            padding: 20px;
        }

        .navbar-nav {
            list-style-type: none;
            padding: 0;
        }

        .nav-item {
            margin-bottom: 10px;
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Semester Page</h1>
        </div>

        <div>
            <nav class="navbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="../CoursePage/CourseMainPage">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../SubjectPage/SubjectPage">Subject</a>
                    </li>
                </ul>
            </nav>
        </div>

        <p>
            <a href="Create" class="btn btn-primary">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>Semester Name</th>
                    <th>Date Created</th>
                    <th>Status</th>
                    <th>Semester Code</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Semester)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SemesterName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreate)
                        </td>
                       <td>
                            @if (item.Status == 1)
                            {
                                <text>Open</text>
                            }
                            else if (item.Status == 0)
                            {
                                <text>Closed</text>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SemesterCode)
                        </td>
                        <td>

                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Details</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
